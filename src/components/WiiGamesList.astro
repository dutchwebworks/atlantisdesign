---
import { getCollection } from "astro:content";
const wiiGamesCollection = await getCollection("wiiGames");
---

<h2>Game releases</h2>

{
    wiiGamesCollection.map(({ data: { title, urlYouTube, urlStore, img } }) => (
        <>
            <h3>
                <a href={urlYouTube} data-youtube-link class="youtube">
                    {title}
                </a>
            </h3>

            <p>Nu in de winkel verkrijgbaar!!</p>

            <p>
                <a href={urlStore} target="_blank">
                    <img src={img} width="200" height="281" loading="lazy" alt={title} />
                </a>
            </p>
        </>
    ))
}
